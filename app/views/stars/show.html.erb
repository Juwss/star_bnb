<div class="header"><%= @star.first_name %> <%= @star.last_name %></div>



<div class="container">
  <div class="cards_star">
    <div id="img">
      <div class="card_star">
        <%= cl_image_tag @star.photo.key, alt: "photo", crop: :fill %>
      </div>
    </div>
    <div class="card_star">
      <%= @star.description %>
      <br>
      <br>
      <%= @star.price %>€
    </div>
    <div>
      <%= link_to "Réserver ici", new_star_reservation_path(@star), class: "btn btn-gradient" %>
    </div>
    <br>
    <br>
    <div>
      <%= link_to "Retour à la liste", stars_path, class: "btn btn-gradient" %>
    </div>
    <div>
      <%= link_to "Mettre à jour le profil", edit_star_path(@star), class: "btn btn-gradient" %>
    </div>
  </div>
</div>
